<p id="notice"><%= notice %></p>

<h1>Apps</h1>

<table>
  <thead>
    <tr>
      <th>Ceo</th>
      <th>Developers</th>
      <th>App Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.ceo.email %></td>

        <td>
          <% if app.developers.present? %>
           <%= select('developers','developer_id', app.developers.collect {|d| [d.email, d.id]} ) %>
            <% else %>
             no team members
          <% end %>
        </td>

        <td><%= app.name %></td>
        <td><%= link_to 'Show', app_path(app) %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_app_path %>
