<hr/>
<h1>App Errors</h1>

<table class="ui celled padded table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Severity</th>
    <th>App name</th>
    <th>Assign Developer</th>
  </tr>
  </thead>

  <tbody id="error_list">
  <% app_errors.each do |app_error| %>
    <tr>
      <td class="ui center aligned sub header"><%= app_error.title %></td>
      <td><%= app_error.description %></td>
      <td><%= app_error.serverity %></td>
      <td><%= app_error.app_name %></td>
      <td><%= select('developers','developer_id',app_error.app.developers.collect {|d| [d.username, d.id]} ) %></td>
      <td><button class="ui red button ">
        <i class="icon close"></i>
         fixed
      </button>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr><th colspan="5">
    <div class="ui right floated pagination menu">
      <a class="icon item">
        <i class="left chevron icon"></i>
      </a>
      <a class="item">1</a>
      <a class="item">2</a>
      <a class="item">3</a>
      <a class="item">4</a>
      <a class="icon item">
        <i class="right chevron icon"></i>
      </a>
    </div>
  </th>
  </tr></tfoot>
</table>

<br>

